@{
    ViewBag.Title = "Software";
    Layout = "~/Views/Shared/_SocialMediaLayout.cshtml";
}

@model List<StudentBookApp.Models.Post>
<section class="row">
    @{
        int counter = 0;

        foreach (var post in ViewBag.TaggedPosts)
        {

            <div class="row">
                <div class="post col-md-6">
                    <a href="../Posts/Details/@post.Id">
                        <h2>
                            @Html.Raw(post.Title)
                        </h2>
                    </a>
                    <div>
                        Posted on <i>@post.Date.ToString("dd.MM.yyyy")</i>
                        @if (post.Author_Id != null)
                        {
                            @:by <i>@post.User.FirstName <strong>(@post.User.EmailID)</strong></i>
                        }
                        else
                        {
                            @:by Anonymous
                        }
                    </div>
                    <div class="body">
                        @{
                            if (ViewBag.PostExists[counter])
                            {
                                if (ViewBag.IsYoutubeVideo[counter])
                                {
                                    <a href="../Posts/Details/@post.Id">
                                        <img src="https://az853139.vo.msecnd.net/static/images/not-found.png" alt="Sample Image" width="100%" />
                                    </a>
                                }
                                else
                                {
                                    <a href="../Posts/Details/@post.Id">
                                        <img src="@post.Body" alt="Sample Image" width="100%" />
                                    </a>

                                }

                            }
                            else
                            {
                                <a href="../Posts/Details/@post.Id">
                                    <img src="https://az853139.vo.msecnd.net/static/images/not-found.png" alt="Sample Image" width="100%" />
                                </a>
                            }
                        }
                    </div>
                    <div>
                        <a href="../Comment/Create/@post.Id" class="btn btn-default">Add comment</a>
                    </div>
                    <hr />
                </div>
            </div>
            counter++;
        }
    }
</section>

