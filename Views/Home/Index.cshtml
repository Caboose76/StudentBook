@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_SocialMediaLayout.cshtml";
}

    <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Warning!</strong> This Website is not an actual Social Media Website, So do not enter personal details or share it on this website!!
    </div>

    <div class="container">
        <br>
        <div id="basicCarousel" class="carousel slide" data-ride="carousel">

            <!-- Indicators - one for each image - add one for each additional image  -->
            <ol class="carousel-indicators">
                <li data-target="#basicCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#basicCarousel" data-slide-to="1"></li>
                <li data-target="#basicCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/Images/studentbeans.jpg" alt="StudentBeans Logo" style="width:100%;" size="250px" align="middle">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 style="color:black;">Sign up to this for Great Student Discounts!!!</h5>
                        <button class="btn" onclick="window.location.href = 'https://www.studentbeans.com/uk';">Learn more</button>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Images/course.jpg" alt="West College Scotland Poster" style="width:100%;" size="250px" align="middle">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 style="color:black;">Click the button to look for course's at West College Scotland</h5>
                        <button class="btn" onclick="window.location.href = 'https://www.westcollegescotland.ac.uk/';">Learn more</button>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Images/spotify.png" alt="Spotify Logo" style="width:100%;" size="250px" align="middle">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 style="color:black;">Sign up to spotify to get a student discount!!!</h5>
                        <button class="btn" onclick="window.location.href = 'https://www.spotify.com/uk/student/';">Learn more</button>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#basicCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#basicCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>    

    <hr />

	<div class="main-body">
		<h2 style="color:#3b5998; font-size:4vw;">Welcome to StudentBook</h2>
		<p>
			This is StudentBook where if you are a student you can join this social media site 
            where you can socialise with other students who may have the same interest's as you like video games, Software Programming or Books,
            you can make posts and people who may know you can comment on a post you made and express their opinion on it and again welcome to StudentBook.
		</p>
	</div>
    
    <div class="row">
        <div class="column">
            <img src="~/Images/img_avatar.png" alt="Avatar" class="index-img">
            <div class="overlay">
                <a href="@Url.Action("Login", "Account")" class="icon" title="Click here to Login to your Account">
                    <i class="fa fa-user"></i>
                </a>
            </div>
        </div>

        <div class="column column-2">
            <img src="~/Images/img_register.png" alt="Image of a register checklist" class="index-img">
            <div class="overlay">
                <a href="@Url.Action("Register", "User")" class="icon" title="Click here to Register for an Account">
                    <i class="fa fa-user"></i>
                </a>
            </div>
        </div>
    </div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")